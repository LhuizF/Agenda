<%- include('includes/head') %>
<%- include('includes/nav') %>
<main>
    <div class="main-container">
        <h1>Minha Agenda</h1>

        <%- include('includes/msg') %>
        <div class="login-container">

            <!-- Register -->
            <form class="form-container" action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <h2>Cadastre-se</h2>
                <p>Ainda n√£o tem conta? Cadastre-se agora.</p>

                <div class="input-container">
                    <label>Seu Email</label>
                    <input type="email" placeholder="Email" name="email" autocomplete="off">
                </div>
                <div class="input-container">
                    <label>Sua senha</label>
                    <input type="password" placeholder="Senha" name="password">
                </div>
                <button class="main-btn">Criar Conta</button>

            </form>
    
            <!-- Login -->
            <form class="form-container" action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <h2>Login</h2>
                <p>Efetue login agora e acesse seus contatos salvos.</p>

                <div class="input-container">
                    <label>Seu Email</label>
                    <input type="email" placeholder="Email" name="email">
                </div>
                <div class="input-container">
                    <label>Sua senha</label>
                    <input type="password" placeholder="Senha" name="password">
                </div>
                <button class="main-btn">Entrar</button>
                
            </form>
        </div>


    </div>
</main>
    
<%- include('includes/footer') %>